$blue: #121b4d;

body {
    padding-top: 50px; 
}

.navbar-inverse{
	background-color: $blue !important;
}
.navbar-nav {
	margin-top: 0 !important;
}
.navbar-fixed-top .nav {
    padding: 10px 0;
}

.navbar-brand, .navbar-fixed-top, .navbar-header{
    line-height: 85px;
    height: 85px;
    padding-top: 0;
}

footer {
    padding: 30px 0;
}


@media(min-width:768px) {
    body {
        padding-top: 50px;  
    }

    .navbar-fixed-top, .navbar-brand .navbar-nav {
        padding: 0px 0px;
    }

    .navbar-fixed-top, .navbar-brand, .navbar-header{
    	line-height: 85px;
    	height: 85px;
    	padding-top: 0;
		}
}

body{
	background: url("<%= asset_path('bg.png')%>") top center no-repeat;
}

.menu {
	a {
		text-decoration: none;
		color: white;	
		font-size: 16px;
	}
	background-color: $blue;
}

#main_content {
	margin-top: 100px;

	#main_text {
		color: black;
		font-size: 15px;
		font-weight: bold;
	}

	.score{
		float: left;
		color: white;
		font-size: 36px;
		background: url("<%= asset_path('score.png')%>");
		margin: 1px;
		padding-top: 25px;
		text-align: center;
	}

	#help-us {
		color: white;
		font-size: 13px;
	}

	.support_box {
		float:left;
		display: inline;
		overflow: none;
		height: 60px;
		background-color: $blue;
	}

	.blue_div{
		background-color: $blue;
	}

}


