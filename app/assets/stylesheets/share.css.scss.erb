$red: #be1213;
$gray: #a4a2a5;

@font-face {
  font-family: "Oswald-Light";
  src: url("<%= asset_path('Oswald-Light.ttf')%>") format("truetype");
}
@font-face {
  font-family: "Oswald-Bold";
  src: url("<%= asset_path('Oswald-Bold.ttf')%>") format("truetype");
}
@font-face {
  font-family: "Oswald-Regular";
  src: url("<%= asset_path('Oswald-Regular.ttf')%>") format("truetype");
}

body {
    font-family: Arial !important;
    bgcolor: black;
}

.navbar.navbar-inverse.navbar-fixed-top{
  border-color: $gray;
	background-color: $red;
}
.navbar-nav {
	margin-top: 0 !important;
}
.navbar-fixed-top .nav {
    padding: 16px 0;
}

.navbar-brand, .navbar-fixed-top, .navbar-header{
    line-height: 85px;
    height: 85px;
    padding-top: 0;
}

footer {
    padding: 30px 0;
}
.nav.navbar-nav.menu > li> a {
  font-size: 22px;
  color: #ffd1d9;
}
.navbar-inverse.navbar-fixed-top .navbar-toggle {
  border: none;
}
.navbar-inverse.navbar-fixed-top .navbar-toggle:hover, .navbar-inverse.navbar-fixed-top .navbar-toggle:focus {
  background-color: $gray;
}

#download_btn, #default_image, #browse_picture,
#download-container .col-md-6.text-center { height: 35px; }
#download-btn img:last-child{display:none}
#download-btn:hover img:first-child{display:none}
#download-btn:hover img:last-child{display:inline-block}

#upload-btn img:last-child{display:none}
#upload-btn:hover img:first-child{display:none}
#upload-btn:hover img:last-child{display:inline-block}

#fb-btn img:last-child{display:none}
#fb-btn:hover img:first-child{display:none}
#fb-btn:hover img:last-child{display:inline-block}

@media(min-width:768px) {
    #bs-example-navbar-collapse-1{
      display: table !important;
      margin: 0 auto;
    }

    #download_btn, #default_image, #browse_picture { height: 59px; }
    #download-container .col-md-6.text-center { height: 59px;}
    .navbar-fixed-top, .navbar-brand .navbar-nav {
        padding: 0px 0px;
    }

    .navbar-fixed-top, .navbar-brand, .navbar-header{
    	line-height: 85px;
    	height: 85px;
    	padding-top: 0;
		}
}

.menu {
	a {
		text-decoration: none;
		color: white;
		font-size: 16px;
	}
  font-family: 'Oswald-Regular';
	background-color: $red;
}

#main_content {
	margin-top: 85px;
	padding-top: 40px;
	#main_text {
		color: black;
		font-size: 15px;
		font-weight: bold;
	}

}

#browse_picture img:hover{
  cursor: pointer;
}
