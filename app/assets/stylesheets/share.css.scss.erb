$blue: #121b4d;
@font-face {
  font-family: "Kantumruy-Light";
  src: url("<%= asset_path('Kantumruy-Light.ttf')%>") format("truetype");
}
@font-face {
  font-family: "Kantumruy-Bold";
  src: url("<%= asset_path('Kantumruy-Bold.ttf')%>") format("truetype");
}
@font-face {
  font-family: "Kantumruy-Regular";
  src: url("<%= asset_path('Kantumruy-Regular.ttf')%>") format("truetype");
}

@font-face {
  font-family: "Oswald-Light";
  src: url("<%= asset_path('Oswald-Light.ttf')%>") format("truetype");
}
@font-face {
  font-family: "Oswald-Bold";
  src: url("<%= asset_path('Oswald-Bold.ttf')%>") format("truetype");
}
@font-face {
  font-family: "Oswald-Regular";
  src: url("<%= asset_path('Oswald-Regular.ttf')%>") format("truetype");
}

body {
    font-family: Arial !important;
}

.navbar-inverse{
	background-color: $blue !important;
}
.navbar-nav {
	margin-top: 0 !important;
}
.navbar-fixed-top .nav {
    padding: 10px 0;
}

.navbar-brand, .navbar-fixed-top, .navbar-header{
    line-height: 85px;
    height: 85px;
    padding-top: 0;
}

footer {
    padding: 30px 0;
}


@media(min-width:768px) {
    body {
        
    }

    .navbar-fixed-top, .navbar-brand .navbar-nav {
        padding: 0px 0px;
    }

    .navbar-fixed-top, .navbar-brand, .navbar-header{
    	line-height: 85px;
    	height: 85px;
    	padding-top: 0;
		}
}

.menu {
	a {
		text-decoration: none;
		color: white;	
		font-size: 16px;
	}
	background-color: $blue;
}

#main_content {
	margin-top: 85px;
	padding-top: 40px;
	#main_text {
		color: black;
		font-size: 15px;
		font-weight: bold;
	}

	.score{
		float: left;
		color: white;
		font-size: 36px;
		background: url("<%= asset_path('score.png')%>");
		margin: 1px;
		padding-top: 25px;
		text-align: center;
	}

	#help-us {
		color: white;
		font-size: 13px;
	}

	.support_box {
		float:left;
		display: inline;
		overflow: none;
		height: 60px;
		background-color: $blue;
	}

	.blue_div{
		background-color: $blue;
	}

}

.canvasContainer
{
    position: absolute;
    left: 0px;
    right: 0px;
    top: 100px;
    bottom: 100px;
    
    background-color: Black;
}

.contextCanvas
{   position: absolute;
    width: 100%;
    height: 100%;
    left: 0px;
    top: 0px;
    
}

.stretch {
    width:100%;
    height:100%;
}

