.panel{style: "margin-top: 100px; margin-left: 80px;"}
	.panel-header
		%h2 Transactions
		.btn.btn-success
			= link_to "Add New Point", "transactions/new"
	.panel-body
		%table{style: "width: 60%;"}
			%tr
				%th
					.col-md-6.h4 Point
				%th
					.col-md-6.h4 User
				%th
					.col-md-6.h4 Update Date
			-@transactions.each do |tran|
				%tr
					%td
						.col-md-6= tran.points
					%td
						.col-md-6= tran.user.name rescue "admin"
					%td
						.col-md-6= tran.updated_at
.panel{style: "margin-top: 100px; margin-left: 80px;"}
	.panel-body
		.row
			.col-md-12
				%h2= "Total Point: #{@total_points}"