      %p Or any below action

  .row
    .col-md-12
      %a{href: "/kickup", style: "text-decoration: none;"}
        .div{style: "background-color: #121b4d;"}
          = image_tag asset_path("profile.png"), size: "50x50", style:"display: inline; margin: 10px;"
          = image_tag asset_path("line.png"), style:"display: inline; margin-left: -5px;"
          %p{style:"display: inline-block; color: white; font-size: 18px; margin-top: 20px; margin-left:20px;"} Show your support
  %br
  .row
    .col-md-12
      %a{href: "/kickup", style: "text-decoration: none;"}
        .div{style: "background-color: #121b4d;"}
          = image_tag asset_path("fb.png"), size: "26x50", style:"display: inline; margin: 10px; margin-right:33px;"
          = image_tag asset_path("line.png"), style:"display: inline; margin-left: -5px;"
          %p{style:"display: inline-block; color: white; font-size: 18px; margin-top: 20px; margin-left:20px;"} Share on Facebook
  
