#main_content
  .row
    .col-md-12
      = image_tag asset_path("support_cambodia.png")  
  %br
  .row#main_text
    .col-md-12
      %p.text-center.text-uppercase Join us to reward 20,000,000 Riel
      %p.text-center.text-uppercase To Cambodia National Football Team

  %br
  .row
    - value = "0001618"
    %table.col-md-12{style: "width: 100%;"}
      %tr
        - value.split("").each do |c|
          %td.score{style: "width: 13.5%; padding:10px;"}
            %p.text-center= "#{c}"
